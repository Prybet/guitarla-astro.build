---
import { formatDate } from "../../helpers";
import Layout from "../../layouts/Layout.astro";
export async function getStaticPaths() {
    const url = `${import.meta.env.PUBLIC_API_URL}/posts?populate=image`;
    const { data } = await fetch(url).then((res) => res.json());

    return data?.map((post) => ({
        params: {
            id: post?.attributes?.url,
        },
        props: {
            post: post?.attributes,
        },
    }));
}

const { title, image, content, publishedAt = "" } = Astro.props.post;
---

<Layout
    title={title}
    description="Tienda de instrumentos musicales, postras, cursos, blog y mÃ¡s"
>
    <article class="post mt-3">
        <img src={image?.data?.attributes?.url} alt={`image blog ${title}`} />
        <div class="content">
            <h3>{title}</h3>
            <p class="date">{formatDate(publishedAt)}</p>
            <p class="text">{content}</p>
        </div>
    </article>
</Layout>

<style>
    .post {
        max-width: 80rem;
        margin: 0 auto;
        text-align: justify;
    }
    .contenido {
        padding: 1.5rem;
    }
    .contenido h3 {
        font-weight: 900;
        font-size: 2.8rem;
        margin: 0;
    }
    .fecha {
        font-size: 1.6rem;
        color: var(--primary);
    }
    .texto {
        white-space: pre-wrap;
    }
    .mt-3 {
        margin-top: 3rem;
    }
</style>
